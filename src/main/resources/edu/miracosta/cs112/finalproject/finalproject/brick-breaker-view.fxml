<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.canvas.Canvas?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.layout.AnchorPane?>

<AnchorPane prefHeight="600.0" prefWidth="1000.0" xmlns="http://javafx.com/javafx/21.0.0" xmlns:fx="http://javafx.com/fxml/1" fx:controller="edu.miracosta.cs112.finalproject.finalproject.BrickBreakerController">
   <children>
      <Canvas fx:id="gameCanvas" height="600.0" layoutX="0.0" layoutY="0.0" width="1000.0" onKeyPressed="#handleKeyPressed"
              onKeyReleased="#handleKeyReleased" />

      <Label fx:id="gameOverLabel" layoutX="300.0" layoutY="200.0" prefWidth="400.0" alignment="CENTER"
             text="Game Over!" visible="false" style="-fx-font-size: 36px; -fx-font-weight: bold;" />

      <Button fx:id="playAgainButton" layoutX="425.0" layoutY="300.0" prefWidth="150.0" prefHeight="50.0" text="Play Again" visible="false"
              onAction="#handlePlayAgain" style="-fx-font-size: 18px;" />
   </children>
</AnchorPane>
